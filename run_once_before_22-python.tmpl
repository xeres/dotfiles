{{- if (eq .chezmoi.os "linux") -}}
#!/bin/bash

set -e

# SEE ALSO: https://github.com/pyenv/pyenv/wiki#suggested-build-environment
sudo apt-get install -y --no-install-recommends \
    make build-essential libssl-dev zlib1g-dev libbz2-dev libreadline-dev \
    libsqlite3-dev wget curl llvm libncurses5-dev xz-utils tk-dev \
    libxml2-dev libxmlsec1-dev libffi-dev liblzma-dev

PYENV_ROOT="$HOME/.local/share/pyenv"
PATH="$PYENV_ROOT/bin:$PATH"
[ -d $PYENV_ROOT ] || \
    git clone https://github.com/pyenv/pyenv $PYENV_ROOT

mkdir -p $PYENV_ROOT

[ -d $PYENV_ROOT/pyenv-doctor ] || \
    git clone https://github.com/pyenv/pyenv-doctor.git $PYENV_ROOT/pyenv-doctor
[ -d $PYENV_ROOT/pyenv-update ] || \
    git clone https://github.com/pyenv/pyenv-update.git $PYENV_ROOT/pyenv-update
[ -d $PYENV_ROOT/pyenv-pip-rehash ] || \
    git clone https://github.com/pyenv/pyenv-pip-rehash.git $PYENV_ROOT/pyenv-pip-rehash
{{ end }}
