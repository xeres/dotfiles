{{- if (eq .chezmoi.os "linux") -}}
#!/bin/bash
# -*- shellscript -*-

set -e

{{ if (and (eq .chezmoi.osRelease.id "ubuntu") (eq .chezmoi.osRelease.versionID "18.04")) -}}
sudo apt-get install -y python3{,-{pip,venv}}
{{ end }}

# SEE ALSO: https://github.com/pyenv/pyenv/wiki#suggested-build-environment
sudo apt-get install -y --no-install-recommends \
    make build-essential libssl-dev zlib1g-dev libbz2-dev libreadline-dev \
    libsqlite3-dev wget curl llvm libncurses5-dev xz-utils tk-dev \
    libxml2-dev libxmlsec1-dev libffi-dev liblzma-dev

PYENV_ROOT="$HOME/.local/share/pyenv"
PATH="$PYENV_ROOT/bin:$PATH"
[ -d $PYENV_ROOT ] || \
    git clone https://github.com/pyenv/pyenv $PYENV_ROOT

mkdir -p $PYENV_ROOT/plugins

[ -d $PYENV_ROOT/plugins/pyenv-doctor ] || \
    git clone https://github.com/pyenv/pyenv-doctor.git $PYENV_ROOT/plugins/pyenv-doctor
[ -d $PYENV_ROOT/plugins/pyenv-update ] || \
    git clone https://github.com/pyenv/pyenv-update.git $PYENV_ROOT/plugins/pyenv-update
[ -d $PYENV_ROOT/plugins/pyenv-pip-rehash ] || \
    git clone https://github.com/pyenv/pyenv-pip-rehash.git $PYENV_ROOT/plugins/pyenv-pip-rehash

if [ ! -d $PYENV_ROOT/versions/$PYENV_INSTALL_VERSION ]; then
    pyenv install $PYENV_INSTALL_VERSION
fi
pyenv global $PYENV_INSTALL_VERSION

python3 -m pip install pipx
python3 -m pipx ensurepath
{{ end }}
